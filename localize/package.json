                        	"width": "6",
                        	"length": "256",
                        	"limereadonly": "1",
                        	"onsqlupdate": "N'<localize owner=\"' + [localize].[owner] + N'\" code=\"' + [localize].[code] + N'\"/>'"
                        }
                    },
