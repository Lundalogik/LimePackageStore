                            "fieldtype": "string",
					"width": "6",
					"newline": "3",
					"length": "128",
					"limereadonly": "1",
					"onsqlupdate": "N'Localize.GetText(\"' + [localize].[owner] + N'\", \"' + [localize].[code] + N'\")'"
                        }
                    },
